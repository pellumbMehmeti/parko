<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/arrive_time_btn"
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:text="CHECK IN"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/expected_arrival"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/departure_time_btn"
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:text="check out"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/arrive_time_btn"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/payment_chk_box"
                    android:layout_width="74dp"
                    android:layout_height="45dp"
                    android:background="@drawable/textview_border"
                    android:text="Paid ?"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toEndOf="@+id/price_text"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/expected_arrival"
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="13:55"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toEndOf="@+id/registration_plates_txt"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/price_text"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="5 $"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toEndOf="@+id/departure_time_btn"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/registration_plates_txt"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="01-732-AA"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </TableRow>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>